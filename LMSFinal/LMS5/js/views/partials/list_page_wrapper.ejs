<main>
    <div class="container">
        <div class="row">
            <div class="col-4 py-1 d-flex">
                <h1 class="text-black"> <%=view.list.listTitle%> </h1>
            </div>
            <div class="col-8 d-flex">
                <input id="searchInput" class="col-10 my-2" placeholder="Begin typing to search for team name...">
                <button id="clearSearch" class="btn btn-primary col-2 m-2">Clear</button>
            </div>
        </div>
       
    </div>
    <div class="col-12">
        <div id="<%=view.alertContainerId%>" class="mt-2"></div>
        <div id="tableContainer" class="mt-2"></div>
        <div class="d-flex justify-content-between">
            <!-- <button id="resetView" class="btn btn-primary">Reset View</button> -->
            <button id="addItem" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%=view.formModalContainerId%>">Add Team</button>
        </div>
    </div>
    
</main>

    <div class="modal rounded-3" id="delete-modal">
    <!-- modal code -->
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><h3>Delete Team</h3></div>
                <div class="modal-body"><h5 id="deleteTxt"></h5></div>
                <div class="modal-body"><button class="btn btn-primary m-1" data-bs-dismiss="modal" id="yesBtn">Yes</button><button class="btn btn-danger m-1" data-bs-dismiss="modal">No</button></div>
            </div>  
        </div>
    </div>
  </div>
  <div class="modal rounded-3" id="form-modal">
    <!-- form modal code -->
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><h3>Edit Team</h3></div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <form class="needs-validation" id="teamForm" novalidate>

                                    <label for="teamName">Team Name</label>
                                    <input type="text" class="form-control is-invalid" id="teamName" placeholder="Team Name..." required>
                                    <div class="invalid-feedback">Please enter a name</div>

                                    <label for="coachName">Coach Name</label>
                                    <select id="coachName" name="coachName" class="form-control" placeholder="Select a Coach">
                                        <% for (let i = 0; i < data.length; i++) { %>
                                            <option value="<%= data[i].value %>"><%= data[i].label %> </option>
                                            <% } %> 
                                    </select>

                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="text" class="form-control is-invalid" id="phoneNumber" placeholder="Phone Number..." required>
                                    <div class="invalid-feedback">Please enter a phone number</div>

                                    <label for="numPlayers">Number of Players</label>
                                    <input type="text" class="form-control is-invalid" id="numPlayers" placeholder="Number of Players..." pattern="[0-9]+" required>
                                    <div class="invalid-feedback">Please enter number of players</div>

                                    <div class="py-1">



                                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal" id="submitBtn">Submit</button>
                                        <button type="button" class="btn btn-danger px-1" id="cancelSubmitBtn">Cancel</button>

                                    </div>


                            </form>
                        </div>
                    </div>
                </div>
                
            </div>  
        </div>
    </div>
    <div class="modal rounded-3" id="sure-modal">
        <!-- "Are you sure?" modal code -->
            <div class="modal-dialog">
                <div class="modal-content shadow">
                    <div class="modal-header"><h3>WAIT</h3></div>
                    <div class="modal-body"><h5>Are you sure you want to cancel?</h5></div>
                    <div class="pt-1">
                        <div class="modal-body">
                            <button class="btn btn-primary" data-bs-dismiss="modal" id="sureBtn">Yes</button>
                            <button class="btn btn-danger" data-bs-dismiss="modal">No</button>
                        </div>
                    </div>                
                </div>  
            </div>
        </div>